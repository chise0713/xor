{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":disableRateLimiting"
    ],
    "baseBranches": [
        "master"
    ],
    "labels": [
        "dependencies"
    ],
    "packageRules": [
        {
            "matchCategories": [
                "rust"
            ],
            "matchUpdateTypes": [
                "major",
                "minor"
            ],
            "enabled": true
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "groupName": "github-actions",
            "extends": [
                "helpers:pinGitHubActionDigests"
            ]
        }
    ]
}